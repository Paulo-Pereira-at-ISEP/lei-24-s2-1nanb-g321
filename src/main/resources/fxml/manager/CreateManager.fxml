<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.fx.manager.CreateManagerFXController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Name:"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1"/>

    <Label text="Date of Birth:" GridPane.rowIndex="1"/>
    <DatePicker fx:id="dateOfBirthPicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Admission Date:" GridPane.rowIndex="2"/>
    <DatePicker fx:id="admissionDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Address:" GridPane.rowIndex="3"/>
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Mobile:" GridPane.rowIndex="4"/>
    <TextField fx:id="mobileField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Email:" GridPane.rowIndex="5"/>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="ID Doc Type:" GridPane.rowIndex="6"/>
    <ComboBox fx:id="idDocTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Doc Type Number:" GridPane.rowIndex="7"/>
    <TextField fx:id="docTypeNumberField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Label text="Tax Payer ID Number:" GridPane.rowIndex="8"/>
    <TextField fx:id="taxPayerIdNumberField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

    <Label text="Role:" GridPane.rowIndex="9"/>
    <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

    <!--
        <Label text="Job:" GridPane.rowIndex="9"/>
        <ComboBox fx:id="jobComboBox" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

        <Label text="Password:" GridPane.rowIndex="11"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="11"/>

        <Label text="Department:" GridPane.rowIndex="12"/>
        <TextField fx:id="departmentField" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
    -->
    <Button text="Create" onAction="#handleCreateManager" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

    <Button fx:id="backButton" text="Back" onAction="#handleBack" GridPane.columnIndex="1" GridPane.rowIndex="11"/>
</GridPane>