<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.fx.manager.ListManagersFXController"
            xmlns:fx="http://javafx.com/fxml">
    <center>
        <TableView fx:id="managersTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name"/>
                <TableColumn fx:id="emailColumn" text="Email"/>
                <TableColumn fx:id="departmentColumn" text="Department"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <Button fx:id="backButton" text="Back" onAction="#handleBack" BorderPane.alignment="CENTER"/>
    </bottom>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>