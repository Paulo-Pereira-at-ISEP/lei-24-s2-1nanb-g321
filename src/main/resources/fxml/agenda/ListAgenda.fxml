<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.fx.agenda.ListAgendaFXController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Tabela de Entradas -->
    <TableView fx:id="entriesTable" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3">
        <columns>
            <TableColumn fx:id="greenSpaceColumn" text="Green Space"/>
            <TableColumn fx:id="taskColumn" text="Task"/>
            <TableColumn fx:id="urgencyColumn" text="Urgency"/>
            <TableColumn fx:id="durationColumn" text="Duration"/>
            <TableColumn fx:id="startTimeColumn" text="Start TIme"/>
            <TableColumn fx:id="endTimeColumn" text="End Time"/>
            <TableColumn fx:id="dateColumn" text="Date"/>
            <TableColumn fx:id="statusColumn" text="Status"/>
            <TableColumn fx:id="teamColumn" text="Team"/>
        </columns>
    </TableView>

    <!-- BotÃ£o de Voltar -->
    <Button fx:id="backButton" text="Back" onAction="#handleBack" GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.halignment="CENTER"/>

</GridPane>