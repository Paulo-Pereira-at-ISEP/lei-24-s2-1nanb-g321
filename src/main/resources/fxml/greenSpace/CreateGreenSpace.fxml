<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.fx.greenSpace.CreateGreenSpaceFXController"
          alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <TextField fx:id="nameField" promptText="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="areaField" promptText="Area" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="classificationChoiceBox" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ChoiceBox fx:id="managerChoiceBox" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

    <Button fx:id="submitButton" text="Submit" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Button fx:id="backButton" text="Back" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
</GridPane>