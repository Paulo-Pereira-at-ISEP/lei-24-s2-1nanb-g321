<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.fx.greenSpace.ListGreenSpaceFXController"
          alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <TableView fx:id="greenSpacesTable" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="areaColumn" text="Area" />
            <TableColumn fx:id="classificationColumn" text="Classification" />
            <TableColumn fx:id="managerColumn" text="Manager" />
        </columns>
    </TableView>

    <Button fx:id="backButton" text="Back" onAction="#handleBack" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
</GridPane>