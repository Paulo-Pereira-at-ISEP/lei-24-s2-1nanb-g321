<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.fx.team.CreateTeamFXController"
          alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Max Team size:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="maxTeamField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Min Team size:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="minTeamField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Skills:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <ScrollPane GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3">
        <TableView fx:id="skillTableView">
            <columns>
                <TableColumn fx:id="skillColumn" text="Skill" />
                <TableColumn fx:id="actionColumn" text="Action" />
                <TableColumn fx:id="countColumn" text="Count" />
            </columns>
        </TableView>
    </ScrollPane>

    <Button text="Create Team" onAction="#handleCreateTeam" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Button fx:id="backButton" text="Back" onAction="#handleBack" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>