<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.fx.collaborator.SelectCollaboratorFXController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <!-- TableView for Collaborators -->
    <TableView fx:id="collaboratorsTable" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
            <TableColumn fx:id="jobColumn" text="Job"/>
            <TableColumn fx:id="skillColumn" text="Skill"/>
        </columns>
    </TableView>

    <!-- Button Select -->
    <Button fx:id="selectButton" text="Select" onAction="#handleselectButton" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <!-- Button Back -->
    <Button fx:id="backButton" text="Back" onAction="#handleBack" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

</GridPane>