<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="pt.ipp.isep.dei.esoft.project.application.controller.fx.skill.CreateSkillFXController"
          alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <Label text="Skill Name:"/>
    <TextField fx:id="skillNameField" GridPane.columnIndex="1"/>

    <Label text="Skill Description:" GridPane.rowIndex="1"/>
    <TextField fx:id="skillDescriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="Create Skill" onAction="#handleCreateSkill" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <Button fx:id="backButton" text="Back" onAction="#handleBack" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>